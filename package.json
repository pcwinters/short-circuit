{
  "name": "short-circuit",
  "version": "0.0.1-1",
  "description": "Short Circuit Flux/React Data Management",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "clean": "./node_modules/.bin/rimraf lib/*",
    "lint": "./node_modules/.bin/eslint src test",
    "build": "mkdir -p lib && ./node_modules/.bin/browserify -e src/index.js -o lib/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "preversion": "npm run clean && npm run lint",
    "version": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pcwinters/short-circuit.git"
  },
  "keywords": [
    "react",
    "flux",
    "relay",
    "redux"
  ],
  "author": "Patrick Winters <patrick.winters@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pcwinters/short-circuit/issues"
  },
  "homepage": "https://github.com/pcwinters/short-circuit#readme",
  "devDependencies": {
    "babel-eslint": "^4.1.6",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "enzyme": "^1.4.1",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.16.1",
    "mocha": "^2.3.4",
    "pathmodify": "^0.5.0",
    "react": "^0.14.6"
  },
  "browserify": {
    "transform": [
      "./pathmodify.js",
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  }
}
